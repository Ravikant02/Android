<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/secondaryProgress">
        <shape
            android:innerRadiusRatio="6"
            android:shape="ring"
            android:thicknessRatio="50.0"
            android:useLevel="true">

            <gradient
                android:centerColor="@color/progress_color"
                android:endColor="@color/progress_color"
                android:startColor="@color/progress_color"
                android:type="sweep" />
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <rotate
            android:fromDegrees="110"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="110">
            <shape
                android:innerRadiusRatio="6"
                android:shape="ring"
                android:thicknessRatio="50.0"
                android:useLevel="true">
                <rotate
                    android:fromDegrees="0"
                    android:pivotX="50%"
                    android:pivotY="50%"
                    android:toDegrees="360" />
                <gradient
                    android:centerColor="@color/rsvp_yes"
                    android:endColor="@color/rsvp_yes"
                    android:startColor="@color/rsvp_yes"
                    android:type="sweep" />

            </shape>
        </rotate>
    </item>
</layer-list>