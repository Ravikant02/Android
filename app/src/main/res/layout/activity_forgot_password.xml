<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_forgot_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.inviter.invtandroid.activity.ForgotPasswordActivity">

    <ImageView
        android:id="@+id/imgTop"
        android:scaleType="fitXY"
        android:src="@drawable/bg_top_homepage"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <TextView
        android:id="@+id/txtForgotPassword"
        android:text="Forgot Password?"
        android:textSize="18dp"
        android:textColor="@color/text_color"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/imgLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtInfo"
        android:text="@string/forgot_info"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:textColor="@color/text_color"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_below="@+id/txtForgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <ImageView
        android:id="@+id/imgLogo"
        android:src="@drawable/bg_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="168dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/txtEmail"
        android:hint="Email"
        android:drawableLeft="@drawable/icon_email"
        android:drawablePadding="5dp"
        android:textCursorDrawable="@drawable/cursor_color"
        android:textColor="@color/text_color"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtInfo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/imgNext"
        android:src="@drawable/icon_right_red"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/txtEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtAlredyHaveAccount"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imgNext"
        android:layout_marginTop="10dp"
        android:textColor="@color/text_color"
        android:text="Already have account?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
