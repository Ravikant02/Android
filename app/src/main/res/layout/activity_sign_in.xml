<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign_in"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.inviter.invtandroid.activity.SignInActivity">

    <ImageView
        android:id="@+id/imgTop"
        android:scaleType="fitXY"
        android:src="@drawable/bg_top_homepage"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <TextView
        android:id="@+id/txtLogIn"
        android:text="Sign In With"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:textColor="@color/text_color"
        android:layout_below="@+id/imgLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/imgFbLogin"
        android:layout_below="@+id/txtLogIn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/icon_fb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtOr"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:text="OR"
        android:textColor="@color/text_color"
        android:layout_below="@+id/imgFbLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/txtPassword"
        android:inputType="textPassword"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:hint="Password"
        android:maxLines="1"
        android:textColor="@color/text_color"
        android:drawableLeft="@drawable/icon_password"
        android:drawablePadding="5dp"
        android:textCursorDrawable="@drawable/cursor_color"
        android:layout_below="@+id/txtEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!--<Button
        android:id="@+id/btnLogin"
        android:textAlignment="center"
        android:layout_above="@+id/bottomRelativeLayout"
        android:text="Login"
        style="?android:attr/borderlessButtonStyle"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:background="@drawable/button_border_bg_red"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />-->

    <ImageView
        android:id="@+id/imgNext"
        android:src="@drawable/icon_right_red"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/bottomRelativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/bottomRelativeLayout"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtDontHaveAccount"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:textColor="@color/text_color"
            android:text="Don't have account?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_centerHorizontal="true"
            android:id="@+id/viewMiddle"
            android:background="@color/text_color"
            android:layout_width="0.5dp"
            android:layout_height="20dp"/>
        <TextView
            android:id="@+id/txtForgotPassword"
            android:text="Forgot Password"
            android:layout_alignParentRight="true"
            android:textColor="@color/text_color"
            android:layout_marginRight="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/imgLogo"
        android:src="@drawable/bg_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/imgFbLogin"
        android:layout_alignStart="@+id/imgFbLogin"
        android:layout_marginTop="170dp" />

    <EditText
        android:id="@+id/txtEmail"
        android:hint="Email"
        android:drawableLeft="@drawable/icon_email"
        android:drawablePadding="5dp"
        android:maxLines="1"
        android:inputType="textEmailAddress"
        android:textCursorDrawable="@drawable/cursor_color"
        android:textColor="@color/text_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtOr"
        android:layout_alignLeft="@+id/txtPassword"
        android:layout_alignStart="@+id/txtPassword" />
</RelativeLayout>

